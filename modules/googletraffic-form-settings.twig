
{% extends "module-form-settings.twig" %}
{% import "forms.twig" as forms %}

{% block moduleFormFields %}
    {% set title %}{% trans "API Key" %}{% endset %}
    {% set helpText %}{% trans "Enter your API Key from Google Maps." %}{% endset %}
    {{ forms.input("apiKey", title, module.getSetting("apiKey"), helpText) }}

    {% set title %}{% trans "Minimum allowed duration" %}{% endset %}
    {% set helpText %}{% trans "Please enter a minumum allowed duration in seconds for this Module. This can be used to prevent run-away charges." %}{% endset %}
    {{ forms.number("minDuration", title, module.getSetting("minDuration"), helpText) }}

    {% set title %}{% trans "Reset all Widgets to the minimum duration?" %}{% endset %}
    {{ forms.checkbox("resetAllWidgets", title, 0) }}

    {% set message %}
        {{ "This module uses the Google Traffic JavaScript API which is a paid-for API from Google."|trans }}
        {{ "Charges will apply each time the map is loaded in the CMS preview and on each Player, therefore we recommend setting a high minimum duration."|trans }}
    {% endset %}
    {{ forms.message(message, "alert alert-danger") }}
{% endblock %}