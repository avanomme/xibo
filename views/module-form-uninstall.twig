
{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Uninstall Module" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#moduleFormUninstall").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="moduleFormUninstall" class="XiboForm form-horizontal" method="delete" action="{{ url_for("module.uninstall", {"id": module.moduleId}) }}">
                {% set message %}{% trans "Are you sure you want to uninstall this module? You can install it again, but will need to reconfigure it." %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}