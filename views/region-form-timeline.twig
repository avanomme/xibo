
{% extends "form-base.twig" %}

{% block callBack %}playlistEditorFormOpen{% endblock %}

{% block formHtml %}
    {# Playlist editor main div #}
    <div class="modal editor-modal">  
        <div class="modal-dialog modal-xl editor-modal-dialog">
            <div class="modal-content editor-modal-content">
                <div class="modal-header editor-modal-header">
                    <h4 class="modal-title editor-modal-title">
                        {% set playlistName = playlist.name %}
                        {% trans %}Edit Playlist - {{ playlistName }}{% endtrans %}
                    </h4>
                    
                    <div class="">
                        <button type="button" class="close editor-modal-close pl-2" onclick="pE.close()">
                            <i class="fa fa-times"></i>
                        </button>
                        <button type="button" class="close editor-modal-help mr-0 px-2" onclick="XiboHelpRender('{{ help }}')">
                            <i class="fa fa-question-circle"></i>
                        </button>
                    </div>
                </div>

                <div class="modal-body editor-modal-body">
                    <div id="playlist-editor" playlist-id="{{ playlist.playlistId }}"></div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            // Load the editor to populate the modal
            pE.loadEditor();
        });
    </script>
{% endblock %}