

{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set layout = layout.layout %}
    {% trans %}Checkout {{ layout }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Checkout" %}, $("#layoutCheckoutForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="layoutCheckoutForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("layout.checkout", {id: layout.layoutId}) }}">
                {% set message %}{% trans "Are you sure you want to checkout this Layout? It will be put in a Draft state so you can make edits." %}{% endset %}
				{{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}
