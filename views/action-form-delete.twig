

{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans %}Delete Action for {{ source }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#actionDeleteForm").submit()
{% endblock %}

{% block callBack %}actionFormDeleteOpen{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="actionDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ url_for("action.delete", {"id": action.actionId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this Action? This cannot be undone" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}