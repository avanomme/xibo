

{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Reset Report Schedule" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#reportScheduleResetForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="reportScheduleResetForm" class="XiboForm form-horizontal" method="post" action="{{ url_for("reportschedule.reset", {"id": reportSchedule.reportScheduleId}) }}">
                {% set message %}{% trans "Are you sure you want to reset this report schedule? This cannot be undone" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}